# default{{{
[default]
# 画面出力先の変更 TODO:画面が斜めになってしまうのを防ぐ (-vf scale=x:yコマンドでも回避ができるが数値の計算が面倒)
vo=xv
# 音声出力先の変更 TODO:ossがないか見に行って使っていないしエラーを吐くので書かなくても問題ないが書いておく
ao=alsa
# 文字化けしないように日本語フォントを指定
font=Ricty
# 処理落ちした場合はコマ飛ばし
framedrop=1
# 同じウィンドウを使い続ける
fixed-vo=1
# フルスクリーンにした時に、ズームする
zoom=1
# キャッシュ。ストリーミング再生などをした時にあったら便利。但しdvdを再生する時は-nocacheを指定する
cache=8192
# 再生を始める前に貯める最小のキャッシュ (ある程度ないとキャッシュが全くない時にログが大量に流れる)
cache-min=5
# useragent、wgetなどと合わせておくと良い
user-agent='Mozilla/5.0 (X11; Linux i686; rv:10.0.4) Gecko/20100101 Firefox/10.0.4'
# 現在の再生時間/全体の再生時間 を表示
osdlevel=3
# フォントサイズをptとして扱う
subfont-autoscale=0
# osdのフォントサイズ
subfont-osd-scale=12
# スクリーンセイバーを一時停止させる
stop-xscreensaver=yes
# }}}default
# profile misc{{{
# music{{{
[music]
profile-desc="music playing"
loop=0
vo=null
# }}}music
# }}}profile misc
# profile protocol{{{
# dvdnav{{{
[protocol.dvdnav]
profile-desc="dvdnav:// streams"
# 再生できなくなるためnocache
nocache=yes
# マウスでメニュー画面を選択できる
mouse-movements=yes
# }}}dvdnav
# }}}profile protocol
# profile extension{{{
# mp3{{{
[extension.mp3]
profile-desc="wrapper music"
profile=music
# }}}
# }}}profile extension

